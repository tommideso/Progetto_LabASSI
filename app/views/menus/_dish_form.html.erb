<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
    <div class="field">
        <%= f.label :nome, "Nome del piatto" %>
        <%= f.text_field :nome %>
    </div>

    <div class="field">
        <%= f.label :tipo_portata, "Tipo di portata" %>
        <%= f.select :tipo_portata, ['Antipasto', 'Primo', 'Secondo', 'Dolce'] %>
    </div>

    <div class="field">
        <%= f.label :ingredienti, "Ingredienti" %>
        <%= f.text_area :ingredienti %>
    </div>

    <button type="button" data-action="nested-form#remove">Rimuovi piatto</button>

    <%= f.hidden_field :_destroy %>
</div>
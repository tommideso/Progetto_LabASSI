<div class="nested-form-wrapper card card-content mr-5 mb-5" data-new-record="<%= f.object.new_record? %>">
    <div class="field">
        <%= f.label :nome, "Nome del piatto", class: 'label' %>
        <%= f.text_field :nome, id:"nome", class: 'input' %>
    </div>

    <div class="field">
        <%= f.label :tipo_portata, "Tipo di portata", class: 'label' %>
        <%= f.select :tipo_portata, ['Antipasto', 'Primo', 'Secondo', 'Dolce'], {id:"tipo_portata"}, class: 'input' %>
    </div>

    <div class="field">
        <%= f.label :ingredienti, "Ingredienti", class: 'label' %>
        <%= f.text_area :ingredienti, id:"ingredienti", class: 'input' %>
    </div>

    <button type="button" data-action="nested-form#remove" class="btn btn-destructive mt-2">Rimuovi piatto</button>

    <%= f.hidden_field :_destroy %>
</div>
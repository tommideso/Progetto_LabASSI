<div class="flex justify-center items-center my-[2.5%]">
  <div class="lg:w-1/3">
    <div class="card card-content" >
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false } }) do |f| %>
        <div class="form">
        <h2 class="text-3xl">Accedi</h2>
        <div class="form-divs">
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input" %>
        </div>

        <div class="form-divs">
          <%= f.label :password, class: "label" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"input" %>
        </div>

        <% if devise_mapping.rememberable? %>
            <%# Hidden field to ensure that the checkbox is always submitted %>
            <%= f.hidden_field :remember_me, value: 1 %>
        <% end %>

          <div class="actions">
            <%= f.button type: "submit", :class => "btn btn-default w-full" do %>
                <p>Accedi</p>
              <% end %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

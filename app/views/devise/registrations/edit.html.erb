<div class="flex justify-center items-center my-[2.5%]">
  <div class="lg:min-w-1/3">
    <div class="card card-content" >
      <h2 class="card-title">Modifica utente</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, data: { turbo: false } }) do |f| %>
  <!-- commentato perchÃ© utilizziamo il nostro handler per gli errori  -->
  <%#= render "devise/shared/error_messages", resource: resource %>
    <div class="form">
  <%= render "shared_partials/profile_errors_complete", resource: resource, user: @user, chef: @chef, client: @client %>
  <div class="form-divs">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, class:"input", autofocus: true, autocomplete: "email", value: resource.persisted? ? (resource.email.presence || resource.reload.email) : resource.email %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-divs">
    <%= f.label :password, class: "" do %>
      <span class="label"> Password (lascia vuoto se non vuoi cambiarla)</span> <span class=""><%= @minimum_password_length ? "(#{@minimum_password_length} caratteri minimo)" : "" %></span>
    <% end %>
    <%= f.password_field :password, class:"input", autocomplete: "new-password" %>
    
  </div>

  <div class="form-divs">
    <%= f.label :password_confirmation, class:"label" %>
    <%= f.password_field :password_confirmation, class:"input", autocomplete: "new-password" %>
  </div>

  <div class="form-divs">
    <%= f.label :current_password, class: "label" do %>
      Password attuale (abbiamo bisogno della tua password attuale per confermare i tuoi cambiamenti)
    <% end %>
    <%= f.password_field :current_password, class:"input", autocomplete: "current-password" %>
  </div>

  <%= render "shared_partials/profile", f: f %>

  <%= f.button type: "submit", :class=> "btn btn-default w-full my-2" do %>
    <p>Modifica utente</p>
  <% end %>
<% end %>
<%= button_to registration_path(resource_name), class:"w-full btn btn-destructive my-2", method: :delete do %>
  <p>Elimina account</p>
<% end %>
</div>
</div>
</div>



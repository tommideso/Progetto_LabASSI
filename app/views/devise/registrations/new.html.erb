<div class="flex justify-center items-center my-[3.5%]">
  <div class="lg:w-1/3">
    <div class="card card-content" >
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false } }) do |f| %>
            <div class="form">
            <h2 class="text-3xl">Registrati</h2>
              <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-divs">
              <%= f.label :email, class: "label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input w-full" %>
            </div>

            <div class="form-divs">
            <%= f.label :password do %>
              <span class="label">Password</span>
              <%= @minimum_password_length ? "(#{@minimum_password_length} caratteri minimo)" : "" %>
            <% end %>
              
              <%= f.password_field :password, autocomplete: "new-password", class: "input w-full" %>
            </div>

            <div class="form-divs">
              <%= f.label :password_confirmation, class:"label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input w-full" %>
            </div>

            <div class="actions">
              <%= f.button "Registrati", type: "submit", :class => "btn btn-default w-full" %>
            </div>
          </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

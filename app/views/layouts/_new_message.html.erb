<div class="form-group msg-form"></div>
  <%= form_with(model: [@single_room, @message], remote: true, class: 'flex') do |f| %>
    <%= f.text_field :body, id: 'chat-text', class: 'form-control msg-content flex-grow p-2 border rounded mr-2', autocomplete: 'off' %>
    <%= f.submit data: {disable_with: false}, class: 'btn btn-primary bg-blue-500 text-white px-4 py-2 rounded' %>
  </div>
<% end %>
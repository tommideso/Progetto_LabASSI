  <div class="field">
    <%= f.label :titolo_cont, "Titolo" %>
    <%= f.search_field :titolo_cont %>
  </div>
  <div class="field">
    <%= f.label :allergeni_true, "Allergeni" %>
    <%= f.search_field :allergeni_true %>
  </div>
  <div class="field">
    <%= f.label :preferenze_alimentari_cont_any, "Preferenze alimentari" %>
    <%= f.search_field :preferenze_alimentari_cont_any %>
  </div>
